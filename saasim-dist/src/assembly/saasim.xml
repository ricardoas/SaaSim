<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>all</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>saasim</baseDirectory>

	<moduleSets>
		<moduleSet>

			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>br.edu.ufcg.lsd:saasim-core</include>
				<include>br.edu.ufcg.lsd:saasim-ext</include>
				<include>br.edu.ufcg.lsd:saasim-quid</include>
			</includes>
			<binaries>
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
		<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/resources</directory>
			<includes>
				<include>examples/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/resources/bin</directory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/resources/production</directory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
	</fileSets>

</assembly>